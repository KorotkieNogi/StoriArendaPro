@model List<StoriArendaPro.Models.Entities.Category>
@{
    ViewData["Title"] = "Управление категориями";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center py-3 mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a href="@Url.Action("CreateCategory")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Добавить категорию
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Список категорий</h6>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>Название</th>
                                <th>Описание</th>
                                <th>Для аренды</th>
                                <th>Для продажи</th>
                                <th>Дата создания</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    
                                    <td>
                                        @if (!string.IsNullOrEmpty(category.Icon))
                                        {
                                            <i class="fas @category.Icon me-2"></i>
                                        }
                                        @category.Name</td>
                                    <td>@(category.Description?.Length > 50 ? category.Description.Substring(0, 50) + "..." : category.Description)</td>
                                    <td>
                                        <span class="badge @(category.IsForRent == true ? "bg-success" : "bg-secondary")">
                                            @(category.IsForRent == true ? "Да" : "Нет")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(category.IsForSale == true ? "bg-success" : "bg-secondary")">
                                            @(category.IsForSale == true ? "Да" : "Нет")
                                        </span>
                                    </td>
                                    <td>@category.CreatedAt?.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("EditCategory", new { id = category.CategoryId })"
                                               class="btn btn-sm btn-outline-primary" title="Редактировать">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="DeleteCategory" method="post"
                                                  onsubmit="return confirm('Вы уверены, что хотите удалить эту категорию?');">
                                                <input type="hidden" name="id" value="@category.CategoryId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Категории еще не добавлены</h5>
                    <p class="text-muted">Начните с создания первой категории</p>
                    <a href="@Url.Action("CreateCategory")" class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-2"></i>Добавить категорию
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            border-top: none;
            font-weight: 600;
            color: #6c757d;
        }

        .btn-group .btn {
            border-radius: 0.375rem;
            margin: 0 2px;
        }

            .btn-group .btn:first-child {
                border-top-right-radius: 0;
                border-bottom-right-radius: 0;
            }

            .btn-group .btn:last-child {
                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
            }
    </style>
}

@section Scripts {
    <script>
        // Инициализация DataTables
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/ru.json'
                },
                pageLength: 10,
                ordering: true,
                responsive: true
            });
        });
    </script>
}