@model StoriArendaPro.Models.ViewModels.PassportVerificationReviewViewModel
@{
    ViewData["Title"] = "Детали проверки паспорта";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Проверка паспортных данных</h1>
        <a href="@Url.Action("PassportVerifications")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Назад к списку
        </a>
    </div>

    <div class="row">
        <!-- Информация о пользователе -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Информация о пользователе</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                            @Model.UserName[0]
                        </div>
                        <div>
                            <h5 class="mb-0">@Model.UserName</h5>
                            <small class="text-muted">ID: @Model.UserId</small>
                        </div>
                    </div>

                    <div class="mb-2">
                        <i class="fas fa-envelope me-2 text-muted"></i>
                        <span>@Model.UserEmail</span>
                    </div>
                    <div class="mb-2">
                        <i class="fas fa-phone me-2 text-muted"></i>
                        <span>@Model.UserPhone</span>
                    </div>

                    <div class="mt-3 p-3 bg-light rounded">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Статус проверки:
                            <span class="badge @GetStatusBadgeClass(Model.Status)">
                                @Model.Status
                            </span>
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Паспортные данные -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Паспортные данные</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Серия и номер</label>
                                <p class="form-control-plaintext">@Model.PassportSeria @Model.PassportNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Кем выдан</label>
                                <p class="form-control-plaintext">@(Model.IssuedBy ?? "Не указано")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Прописка</label>
                                <p class="form-control-plaintext">@Model.Propiska</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Место проживания</label>
                                <p class="form-control-plaintext">@Model.PlaceLive</p>
                            </div>
                        </div>
                    </div>

                    <!-- Фотографии паспорта -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Лицевая сторона</label>
                                @if (!string.IsNullOrEmpty(Model.PassportPhotoFront))
                                {
                                    <img src="@Model.PassportPhotoFront" class="img-fluid rounded border"
                                         style="max-height: 300px; cursor: pointer;"
                                         onclick="openImageModal('@Model.PassportPhotoFront')">
                                }
                                else
                                {
                                    <p class="text-muted">Фото не загружено</p>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Обратная сторона</label>
                                @if (!string.IsNullOrEmpty(Model.PassportPhotoBack))
                                {
                                    <img src="@Model.PassportPhotoBack" class="img-fluid rounded border"
                                         style="max-height: 300px; cursor: pointer;"
                                         onclick="openImageModal('@Model.PassportPhotoBack')">
                                }
                                else
                                {
                                    <p class="text-muted">Фото не загружено</p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Комментарий администратора -->
                    @if (!string.IsNullOrEmpty(Model.AdminNotes))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Комментарий администратора</label>
                            <div class="alert alert-info">
                                @Model.AdminNotes
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Кнопки действий -->
    @if (Model.Status == "ожидает рассмотрения")
    {
        <div class="card">
            <div class="card-body">
                <div class="d-flex gap-2 justify-content-center">
                    <form method="post" action="@Url.Action("VerifyPassport")" class="d-inline">
                        <input type="hidden" name="verificationId" value="@Model.VerificationId">
                        <input type="hidden" name="status" value="approved">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check me-2"></i>Одобрить
                        </button>
                    </form>

                    <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#rejectModal">
                        <i class="fas fa-times me-2"></i>Отклонить
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<!-- Модальное окно для отклонения -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Отклонение паспортных данных</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="@Url.Action("VerifyPassport")">
                <input type="hidden" name="verificationId" value="@Model.VerificationId">
                <input type="hidden" name="status" value="rejected">

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Причина отклонения *</label>
                        <textarea class="form-control" name="adminNotes" rows="4" required
                                  placeholder="Укажите причину отклонения паспортных данных..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-danger">Подтвердить отклонение</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Модальное окно для просмотра изображения -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Просмотр изображения</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" class="img-fluid" style="max-height: 70vh;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openImageModal(imageUrl) {
            $('#modalImage').attr('src', imageUrl);
            $('#imageModal').modal('show');
        }
    </script>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "approved" => "bg-success",
            "rejected" => "bg-danger",
            "ожидает рассмотрения" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}