<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Админ-панель</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            color: white;
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.8);
                padding: 0.75rem 1rem;
                border-left: 3px solid transparent;
            }

                .sidebar .nav-link:hover {
                    color: white;
                    background-color: rgba(255, 255, 255, 0.1);
                    border-left-color: #007bff;
                }

                .sidebar .nav-link.active {
                    color: white;
                    background-color: rgba(255, 255, 255, 0.1);
                    border-left-color: #007bff;
                }

        .main-content {
            background-color: #f8f9fa;
        }

        .admin-header {
            background-color: white;
            border-bottom: 1px solid #dee2e6;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-0">
                <div class="p-3">
                    <h5 class="text-center mb-4">Админ-панель</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                               href="@Url.Action("Index", "Admin", new { area = "Admin" })">
                                <i class="fas fa-tachometer-alt me-2"></i>Дашборд
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "PassportVerifications" ? "active" : "")"
                               href="@Url.Action("PassportVerifications", "Admin", new { area = "Admin" })">
                                <i class="fas fa-passport me-2"></i>Проверка паспортов
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Users" ? "active" : "")"
                               href="@Url.Action("Users", "Admin", new { area = "Admin" })">
                                <i class="fas fa-users me-2"></i>Пользователи
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Products", "Admin", new { area = "Admin" })">
                                <i class="fas fa-tools me-2"></i>Товары
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Orders", "Admin", new { area = "Admin" })">
                                <i class="fas fa-shopping-cart me-2"></i>Заказы
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Support", "Admin", new { area = "Admin" })">
                                <i class="fas fa-headset me-2"></i>Поддержка
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Profile" ? "active" : "")"
                               href="@Url.Action("Profile", "Admin", new { area = "Admin" })">
                                <i class="fas fa-user-cog me-2"></i>Профиль админа
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a class="nav-link" href="@Url.Action("Index", "Home", new { area = "" })">
                                <i class="fas fa-home me-2"></i>На сайт
                            </a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post">
                                <button type="submit" class="nav-link text-start w-100 bg-transparent border-0">
                                    <i class="fas fa-sign-out-alt me-2"></i>Выйти
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-10 main-content p-0">
                <div class="admin-header p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">@ViewData["Title"]</h4>
                        <span class="badge bg-danger">
                            <i class="fas fa-user-shield me-1"></i>Администратор
                        </span>
                    </div>
                </div>

                <div class="p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>