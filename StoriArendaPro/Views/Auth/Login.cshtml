@model StoriArendaPro.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Вход в аккаунт</h2>
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="your@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Password" type="password" class="form-control" id="passwordLogin" />
                                <button type="button" class="btn btn-outline-secondary" id="togglePasswordLogin">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Войти</button>
                    </form>
                    <hr class="my-4">
                    <div class="text-center">
                        <span>Нет аккаунта?</span>
                        <a asp-action="Register">Зарегистрироваться</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>