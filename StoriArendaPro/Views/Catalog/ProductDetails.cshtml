                    // Проверяем, был ли выбран файл
                    if (!fileInput.files || fileInput.files.length === 0) {
                        console.log('File selection was cancelled');
                        // Не добавляем класс is-invalid при отмене
                    }
                }, 100);
            });
        });

            // Отправка паспортных данных
            $('#submitPassport').on('click', function() {
                // Сбрасываем кастомные сообщения валидации
                $('input[type="file"]').each(function() {
                    this.setCustomValidity('');
                });

                // Проверяем валидность формы
                if (!$('#passportForm')[0].checkValidity()) {
                    $('#passportForm')[0].reportValidity();
                    return;
                }

                // Проверяем, что файлы действительно выбраны
                if (!validatePassportFiles()) {
                    alert('Пожалуйста, выберите оба изображения паспорта');
                    return;
                }

                var formData = new FormData($('#passportForm')[0]);
                $('#submitPassport').prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Отправка...');

                $.ajax({
                    url: '@Url.Action("UpdatePassportData", "Profile")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        $('#submitPassport').prop('disabled', false).text('Отправить на проверку');
                        if (response.success) {
                            alert('Паспортные данные успешно отправлены на проверку. Дождитесь подтверждения администратора.');
                            $('#passportVerificationModal').modal('hide');
                            $('#passportForm')[0].reset();

                            // Обновляем страницу или состояние кнопок
                            location.reload();
                        } else {
                            alert('Ошибка: ' + response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        $('#submitPassport').prop('disabled', false).text('Отправить на проверку');
                        console.error('Error submitting passport data:', error);
                        alert('Ошибка при отправке данных: ' + (xhr.responseJSON?.message || error));
                    }
                });
            });

            // Добавление в корзину
            $('#confirmRental').on('click', function() {
                const formData = {
                    productId: $('#productId').val(),
                    rentalPriceId: $('#rentalPriceId').val(),
                    startDate: $('#startDate').val(),
                    endDate: $('#endDate').val(),
                    quantity: parseInt($('#quantity').val()),
                    rentalType: 'daily',
                    unitPrice: parseFloat($('#unitPrice').text().replace(' ₽', '').replace(',', '')),
                    subtotal: parseFloat($('#totalPrice').text().replace(' ₽', '').replace(',', ''))
                };

                console.log('Adding to cart:', formData);

                $.ajax({
                    url: '@Url.Action("AddToCart", "Profile")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function(response) {
                        console.log('Add to cart response:', response);
                        if (response.success) {
                            $('#rentalModal').modal('hide');
                            updateCartCount(response.cartCount);
                            showToast('Товар успешно добавлен в корзину!');
                        } else if (response.requiresVerification) {
                            alert(response.message);
                            $('#rentalModal').modal('hide');
                            $('#passportVerificationModal').modal('show');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error adding to cart:', error);
                        alert('Ошибка при добавлении в корзину: ' + error);
                    }
                });
            });

            // Слушатели для обновления расчета стоимости
            $('#startDate, #endDate, #quantity').on('change', calculateRentalCost);

            // Инициализация расчета при загрузке
            calculateRentalCost();

            // Обработчик для закрытия модального окна при нажатии на кнопку "Отмена"
            $('.btn-close, .btn-secondary').on('click', function() {
                // Просто закрываем модальное окно без дополнительных действий
                $(this).closest('.modal').modal('hide');
            });
        });
    </script>
}