@section Scripts {
    <script>
        // Глобальные функции для этой страницы
        function updateCartCount(count) {
            $('#cartCount').text(count);
        }

        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast align-items-center text-white bg-success border-0 position-fixed top-0 end-0 m-3';
            toast.style.zIndex = '9999';
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            document.body.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            toast.addEventListener('hidden.bs.toast', function () {
                document.body.removeChild(toast);
            });
        }

        function calculateRentalCost() {
            const startDate = new Date($('#startDate').val());
            const endDate = new Date($('#endDate').val());
            const quantity = parseInt($('#quantity').val()) || 1;
            const dailyPrice = @Model.PricePerDay;
            const deposit = @Model.Deposit;

            if (isNaN(startDate) || isNaN(endDate)) return;

            const days = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));
            if (days <= 0) return;

            let discountPercent = 0;
            if (days >= 14) discountPercent = 25;
            else if (days >= 10) discountPercent = 20;
            else if (days >= 7) discountPercent = 15;
            else if (days >= 3) discountPercent = 10;

            const discount = discountPercent / 100;
            const rentalCost = dailyPrice * days * quantity;
            const discountAmount = rentalCost * discount;
            const totalRentalCost = rentalCost - discountAmount;
            const totalWithDeposit = totalRentalCost + (deposit * quantity);
            const unitPrice = totalRentalCost / quantity;

            $('#daysCount').text(days + ' дней');
            $('#discount').text(discountPercent + '% (' + discountAmount.toFixed(2) + ' ₽)');
            $('#rentalCost').text(totalRentalCost.toFixed(2) + ' ₽');
            $('#totalPrice').text(totalWithDeposit.toFixed(2) + ' ₽');
            $('#unitPrice').text(unitPrice.toFixed(2) + ' ₽ за шт.');
        }

        function checkPassportVerification() {
            console.log('checkPassportVerification function called');
            $.get('@Url.Action("CheckPassportVerification", "Profile")')
                .done(function(response) {
                    console.log('Passport verification response:', response);
                    if (response.isVerified) {
                        $('#rentalModal').modal('show');
                    } else if (response.isPending) {
                        alert('Ваши паспортные данные находятся на проверке. Дождитесь подтверждения администратора.');
                    } else if (response.hasPassportData && response.status === "отклонено") {
                        alert('Ваши паспортные данные были отклонены. Пожалуйста, обновите данные в профиле.');
                        window.location.href = '@Url.Action("Index", "Profile")';
                    } else {
                        // Показываем модальное окно для заполнения паспортных данных
                        $('#passportVerificationModal').modal('show');
                    }
                })
                .fail(function(xhr, status, error) {
                    console.error('Error checking passport verification:', error);
                    $('#passportVerificationModal').modal('show');
                });
        }

        // Функция для проверки файлов
        function validatePassportFiles() {
            const frontFileInput = $('input[name="PassportPhotoFront"]')[0];
            const backFileInput = $('input[name="PassportPhotoBack"]')[0];

            let isValid = true;

            // Сбрасываем предыдущие ошибки
            $('.passport-photo').removeClass('is-invalid');

            // Проверяем лицевую сторону
            if (!frontFileInput.files || frontFileInput.files.length === 0) {
                $(frontFileInput).addClass('is-invalid');
                isValid = false;
            }

            // Проверяем обратную сторону
            if (!backFileInput.files || backFileInput.files.length === 0) {
                $(backFileInput).addClass('is-invalid');
                isValid = false;
            }

            return isValid;
        }

        // Новая функция для безопасной обработки файлового ввода
        function setupFileInputHandlers() {
            $('.passport-photo').each(function() {
                let fileInput = this;
                let originalValue = fileInput.value;

                $(fileInput).off('change').on('change', function() {
                    if (this.files && this.files.length > 0) {
                        $(this).removeClass('is-invalid');
                        console.log('File selected:', this.files[0].name);
                    }
                });

                // Альтернативный подход: отслеживание изменения значения
                let lastValue = '';
                setInterval(function() {
                    if (fileInput.value !== lastValue) {
                        lastValue = fileInput.value;
                        if (fileInput.value === '') {
                            console.log('File input was cleared');
                        }
                    }
                }, 100);
            });
        }

        $(document).ready(function() {
