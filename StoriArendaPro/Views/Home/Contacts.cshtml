@section Scripts {
    <script>
        // Функция для копирования номера телефона
        $(document).on('click', '.copy-phone', function() {
            var number = $(this).data('number');
            navigator.clipboard.writeText(number).then(function() {
                toastr.success('Номер скопирован: ' + number);
            }).catch(function() {
                alert('Не удалось скопировать номер. Скопируйте вручную: ' + number);
            });
        });

        // Функция для поделиться контактами
        $('#shareContacts').click(function() {
            if (navigator.share) {
                navigator.share({
                    title: 'СтройАренда+ - Контакты',
                    text: 'Свяжитесь с нами для аренды строительного оборудования',
                    url: window.location.href
                }).catch(console.error);
            } else {
                alert('Функция "Поделиться" недоступна в вашем браузере');
            }
        });
    </script>
