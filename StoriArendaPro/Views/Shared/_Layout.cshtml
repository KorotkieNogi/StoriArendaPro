    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    @* логотип *@
    <link rel="icon" href="~/favicon.ico?v=2" type="image/x-icon">
    <link rel="icon" type="image/png" href="~/favicon-96x96.png?v=2" sizes="96x96">
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg?v=2">
    <link rel="apple-touch-icon" href="~/apple-touch-icon.png?v=2">
    <link rel="manifest" href="~/site.webmanifest?v=2">
    <meta name="apple-mobile-web-app-title" content="СтройАренда+" />


    @RenderSection("Styles", required: false)

    <style>
        /* Стили для бензопилы в хедере */
        .logo-container-header {
            position: relative;
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
            border-radius: 8px;
            text-align: center;
            border: 2px solid rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(3px);
            overflow: hidden;
            transition: all 0.3s ease;
            margin-right: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .logo-container-header .tools-background {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0.08;
                pointer-events: none;
                z-index: 1;
            }

            .logo-container-header .tool-icon {
                position: absolute;
                font-size: 0.8em;
                color: #f39c12;
                animation: float 6s ease-in-out infinite;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
            }

                .logo-container-header .tool-icon:nth-child(1) {
                    top: 20%;
                    left: 15%;
                    animation-delay: 0s;
                }

                .logo-container-header .tool-icon:nth-child(2) {
                    top: 65%;
                    left: 80%;
                    animation-delay: 2s;
                }

                .logo-container-header .tool-icon:nth-child(3) {
                    top: 75%;
                    left: 25%;
                    animation-delay: 4s;
                }

            .logo-container-header .logo-title {
                font-size: 1.2em;
                font-weight: 700;
                color: #ffffff;
                text-shadow: 6px 5px 3px rgba(0, 0, 0, 0.7);
                position: relative;
                z-index: 2;
                letter-spacing: 0.3px;
                margin: 0;
                display: flex;
                align-items: center;
            }

            .logo-container-header .logo-plus {
                color: #e74c3c;
                font-size: 0.9em;
                vertical-align: super;
                text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7);
            }

            .logo-container-header:hover {
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
                border-color: rgba(255, 255, 255, 0.25);
                box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
                transform: translateY(-1px);
            }

        /* Бензопила в хедере */
        .header-chainsaw {
            display: inline-block;
            position: relative;
            vertical-align: middle;
            z-index: 3;
            width: 35px;
            height: 35px;
            margin-right: 5px;
        }

        .header-chainsaw-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            animation: chainsawVibrate 0.5s ease-in-out infinite alternate;
        }

            .header-chainsaw-icon img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.5));
            }

        .header-chainsaw:hover .header-chainsaw-icon {
            animation: chainsawRunning 0.2s linear infinite;
        }

        /* Стили для растянутого логотипа в футере */
        .logo-container-full {
            position: relative;
            padding: 30px 20px;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.08) 100%);
            border-radius: 15px;
            text-align: center;
            border: 2px solid rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(10px);
            overflow: hidden;
            width: 100%;
            margin: 2rem 0;
        }

            .logo-container-full .tools-background {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                opacity: 0.12;
                pointer-events: none;
                z-index: 1;
            }

            .logo-container-full .tool-icon {
                position: absolute;
                font-size: 2em;
                color: #f39c12;
                animation: float 8s ease-in-out infinite;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
                opacity: 0.8;
            }

                .logo-container-full .tool-icon:nth-child(1) {
                    top: 10%;
                    left: 5%;
                    animation-delay: 0s;
                }

                .logo-container-full .tool-icon:nth-child(2) {
                    top: 25%;
                    left: 85%;
                    animation-delay: 1s;
                }

                .logo-container-full .tool-icon:nth-child(3) {
                    top: 70%;
                    left: 10%;
                    animation-delay: 2s;
                }

                .logo-container-full .tool-icon:nth-child(4) {
                    top: 55%;
                    left: 90%;
                    animation-delay: 3s;
                }

                .logo-container-full .tool-icon:nth-child(5) {
                    top: 15%;
                    left: 75%;
                    animation-delay: 4s;
                }

                .logo-container-full .tool-icon:nth-child(6) {
                    top: 80%;
                    left: 25%;
                    animation-delay: 5s;
                }

                .logo-container-full .tool-icon:nth-child(7) {
                    top: 35%;
                    left: 15%;
                    animation-delay: 6s;
                }

                .logo-container-full .tool-icon:nth-child(8) {
                    top: 65%;
                    left: 80%;
                    animation-delay: 7s;
                }

            .logo-container-full .hard-hat {
                font-size: 2.5em;
                color: #f39c12;
                margin-bottom: 15px;
                animation: bounce 3s ease-in-out infinite;
                position: relative;
                z-index: 2;
                text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
            }

            .logo-container-full .logo-title {
                font-size: 3em;
                font-weight: 800;
                color: #2c3e50;
                text-shadow: 3px 3px 8px #ffffff;
                letter-spacing: 1.5px;
                margin: 0;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .logo-container-full .logo-plus {
                color: #e74c3c;
                font-size: 1.5em;
                vertical-align: super;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            }

            .logo-container-full .construction-bar {
                height: 6px;
                background: linear-gradient(90deg, #e74c3c, #f39c12, #3498db, #27ae60, #9b59b6);
                border-radius: 3px;
                margin: 20px auto;
                max-width: 300px;
                box-shadow: 0 3px 10px rgba(0, 0, 0, 0.4);
            }

            .logo-container-full .tagline {
                color: rgba(255, 255, 255, 0.95);
                font-size: 1.3em;
                font-weight: 500;
                margin-top: 15px;
                position: relative;
                z-index: 2;
                text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);
            }

            .logo-container-full:hover {
                background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.12) 100%);
                border-color: rgba(255, 255, 255, 0.2);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
            }

        /* Бензопила в футере */
        .footer-chainsaw {
            display: inline-block;
            position: relative;
            vertical-align: middle;
            z-index: 3;
            width: 60px;
            height: 60px;
            margin-right: 10px;
        }

        .footer-chainsaw-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            animation: chainsawVibrate 0.5s ease-in-out infinite alternate;
        }

            .footer-chainsaw-icon img {
                width: 100%;
                height: 100%;
                object-fit: contain;
                filter: drop-shadow(2px 2px 3px rgba(0, 0, 0, 0.7));
            }

        .footer-chainsaw:hover .footer-chainsaw-icon {
            animation: chainsawRunning 0.2s linear infinite;
        }

        .max-logo-img {
            width: 24px;
            height: 24px;
            object-fit: contain;
            border-radius: 6px;
        }

        .btn-max {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            border: 2px solid #00C853;
            color: white !important;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-max:hover {
                background: linear-gradient(135deg, #00C853 0%, #00A844 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 15px rgba(0,200,83,0.4);
                color: white !important;
                border-color: #00A844;
            }

        .btn-lg {
            min-width: 160px;
            font-weight: 500;
            border-radius: 10px;
            padding: 12px 20px;
            margin: 5px;
        }

        .bg-light {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%) !important;
            border: 1px solid #dee2e6;
        }

        /* Анимации */
        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg) scale(1);
                filter: brightness(1);
            }

            33% {
                transform: translateY(-15px) rotate(10deg) scale(1.15);
                filter: brightness(1.3);
            }

            66% {
                transform: translateY(10px) rotate(-8deg) scale(0.95);
                filter: brightness(0.9);
            }
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }

            50% {
                transform: translateY(-10px) rotate(8deg);
            }
        }

        @@keyframes chainsawVibrate {
            0% {
                transform: translateX(0) rotate(0deg);
            }

            100% {
                transform: translateX(1px) rotate(1deg);
            }
        }

        @@keyframes chainsawRunning {
            0% {
                transform: rotate(0deg);
            }

            25% {
                transform: rotate(5deg);
            }

            50% {
                transform: rotate(0deg);
            }

            75% {
                transform: rotate(-5deg);
            }

            100% {
                transform: rotate(0deg);
            }
        }

        /* Адаптивность */
        @@media (max-width: 992px) {
            .logo-container-header {
                padding: 0.4rem 0.8rem;
            }

                .logo-container-header .logo-title {
                    font-size: 1.1em;
                }

                .logo-container-header .tool-icon {
                    font-size: 0.7em;
                }

            .header-chainsaw {
                width: 30px;
                height: 30px;
            }

            .logo-container-full .logo-title {
                font-size: 2.5em;
            }

            .logo-container-full .tool-icon {
                font-size: 1.8em;
            }

            .logo-container-full .hard-hat {
                font-size: 2.2em;
            }

            .footer-chainsaw {
                width: 50px;
                height: 50px;
            }
        }

        @@media (max-width: 768px) {
            .logo-container-header {
                padding: 0.3rem 0.6rem;
            }

                .logo-container-header .logo-title {
                    font-size: 1em;
                }

            .header-chainsaw {
                width: 25px;
                height: 25px;
            }

            .logo-container-full {
                padding: 25px 15px;
            }

                .logo-container-full .logo-title {
                    font-size: 2em;
                }

                .logo-container-full .tool-icon {
                    font-size: 1.5em;
                }

                .logo-container-full .hard-hat {
                    font-size: 1.8em;
                }

                .logo-container-full .tagline {
                    font-size: 1.1em;
                }

                .logo-container-full .construction-bar {
                    max-width: 250px;
                }

            .footer-chainsaw {
                width: 40px;
                height: 40px;
            }
        }

        @@media (max-width: 576px) {
            .logo-container-header {
                padding: 0.25rem 0.5rem;
            }

                .logo-container-header .logo-title {
                    font-size: 0.9em;
                }

                .logo-container-header .tool-icon {
                    font-size: 0.6em;
                }

            .header-chainsaw {
                width: 20px;
                height: 20px;
                margin-right: 3px;
            }

            .logo-container-full {
                padding: 20px 10px;
            }

                .logo-container-full .logo-title {
                    font-size: 1.6em;
                }

                .logo-container-full .tool-icon {
                    font-size: 1.2em;
                }

                .logo-container-full .hard-hat {
                    font-size: 1.5em;
                }

                .logo-container-full .tagline {
                    font-size: 1em;
                }

                .logo-container-full .construction-bar {
                    max-width: 200px;
                    height: 5px;
                }

            .footer-chainsaw {
                width: 30px;
                height: 30px;
                margin-right: 5px;
            }
        }
    </style>
</head>
