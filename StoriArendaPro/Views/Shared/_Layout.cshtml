                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="catalogDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Каталог
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="catalogDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Rent", "Catalog", new { showCategories = true })">
                                        <i class="fas fa-tools me-2"></i> Каталог аренды
                                    </a>
                                </li>
                                @* <li>
                                    <a class="dropdown-item" href="@Url.Action("Sale", "Catalog")">
                                        <i class="fas fa-shopping-cart me-2"></i> Каталог товаров
                                    </a>
                                </li> *@
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("RentalTerms", "Home")">Условия аренды</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contacts", "Home")">Контакты</a>
                        </li>
                    </ul>

                    <div class="dropdown me-3">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="headerPhoneDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-phone-alt me-2"></i>8 (922) 175-40-98
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="headerPhoneDropdown">
                            <li><a class="dropdown-item" href="tel:+79221754098"><i class="fas fa-phone me-2"></i>Позвонить</a></li>
                            <li>
                                <a class="dropdown-item" href="https://web.max.ru/6454213">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="me-2">
                                        <path d="M12 2L2 7l10 5 10-5-10-5zm0 2.5L20 7l-8 4-8-4 8-4.5z" />
                                        <path d="M2 17l10 5 10-5" />
                                        <path d="M2 12l10 5 10-5" />
                                    </svg>
                                    MAX
                                </a>
                            </li>
                            <li><a class="dropdown-item" href="https://wa.me/79221754098"><i class="fab fa-whatsapp me-2"></i>WhatsApp</a></li>
                            <li><a class="dropdown-item" href="https://t.me/+79221754098"><i class="fab fa-telegram me-2"></i>Telegram</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><button class="dropdown-item copy-phone" data-number="+79221754098"><i class="far fa-copy me-2"></i>Скопировать номер</button></li>
                        </ul>
                    </div>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i> @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-danger ms-1">Admin</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Index", "Admin", new { area = "Admin" })">
                                                <i class="fas fa-cog me-2"></i>Админ-панель
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("PassportVerifications", "Admin", new { area = "Admin" })">
                                                <i class="fas fa-passport me-2"></i>Проверка паспортов
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Index", "Profile")">
                                                <i class="fas fa-user me-2"></i>Профиль
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>

                            <!-- Корзина - скрыть для администраторов -->
                            @if (!User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a href="@Url.Action("Cart", "Profile")" class="btn btn-outline-primary position-relative">
                                        <i class="fas fa-shopping-cart"></i>
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cartCount">
                                            @await Component.InvokeAsync("CartCount")
                                        </span>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            @* <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Login", "Auth", new { area = "" })">Вход</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Register", "Auth", new { area = "" })">Регистрация</a>
                            </li> *@
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
